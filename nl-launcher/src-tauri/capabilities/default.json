{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/nl-host",
          "cmd": "binaries/nl-host",
          "args": true,
          "sidecar": true
        },
        {
          "name": "adb",
          "cmd": "binaries/adb",
          "args": true,
          "sidecar": true
        }
      ]
    }
  ]
}